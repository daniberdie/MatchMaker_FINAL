<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/back_button"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:backgroundTint="@color/common_google_signin_btn_text_light"
            android:foreground="?attr/homeAsUpIndicator"
            android:foregroundTint="@color/colorAccent"
            android:textSize="20dp"></Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/estadistictitle"></ImageView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_weight="1">
        <LinearLayout
            android:id="@+id/layResult1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/totalGames"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/totalGames"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                android:textSize="30dp">
            </TextView>
            <TextView
                android:id="@+id/result1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:text="4     "
                android:textStyle="bold"
                android:textSize="30dp"
                android:textAlignment="textEnd"
                android:layout_weight="1"
                android:gravity="end">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layResult2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/activeGames"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activeGames"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                android:textSize="30dp">
            </TextView>
            <TextView
                android:id="@+id/result2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:text="6     "
                android:textStyle="bold"
                android:textSize="30dp"
                android:textAlignment="textEnd"
                android:layout_weight="1"
                android:gravity="end">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layResult3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/createdGames"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/CreatedGames"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                android:textSize="30dp">
            </TextView>
            <TextView
                android:id="@+id/result3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:text="1     "
                android:textStyle="bold"
                android:textSize="30dp"
                android:textAlignment="textEnd"
                android:layout_weight="1"
                android:gravity="end">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layResult4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/sportGames"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/SportUssage"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                android:textSize="30dp">
            </TextView>
            <TextView
                android:id="@+id/result4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:text="75 %"
                android:textStyle="bold"
                android:textSize="30dp"
                android:textAlignment="textEnd"
                android:layout_weight="1"
                android:gravity="end">
            </TextView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>